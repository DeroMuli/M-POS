<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.UpdateActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/tool_bar"
        android:id="@+id/update_toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <Button
             android:onClick="GoToPrice"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=" Update Price "/>

        <Button
            android:onClick="GoToName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Update Name "/>

        <Button
            android:onClick="GoToImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Update Image "/>

        <Button
            android:onClick="GoToCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Update Category "/>

    </LinearLayout>

</LinearLayout>